{
  "$schema": "./web-types-schema.json",
  "name": "web-types-webcomponent1",
  "default-icon": "icons/lit.png",
  "js-types-syntax": "typescript",
  "version": "0.1.0",
  "contributions": {
    "html": {
      "elements": [
        {
          "name": "simple-greeting",
          "description": "An example component to showcase web-types capabilities",
          "attributes": [
            {
              "name": "name",
              "description": "user name",
              "value": {
                "type": "string",
                "required": true
              }
            }
          ]
        }
      ],
      "attributes": [
        {
          "name": "event handler",
          "description": "Lit click event",
          "value": {
            "kind": "expression",
            "type": "void"
          },
          "pattern": {
            "items": "/html/events",
            "template": [
              "@",
              "#item:event name"
            ]
          }
        }
      ]
    }
  }
}
